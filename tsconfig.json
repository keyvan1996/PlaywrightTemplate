{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@data/*": ["src/data/*"],
      "@pages/*": ["src/pages/*"],
      "@env/*": ["src/env/*"]
    }
  },
  "include": ["**/*.ts"]
}
